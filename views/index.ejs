        <hr>
      </section>
  
          <!-- Poll Question and User Email -->
      <section id="poll" class="col-sm-8 text-left">
        <h3>Please Enter Your Question:</h3>
        <textarea id="make-question" style="width:100%; border-radius: 5px;" name="text" placeholder="What question would you like to ask?" style="border-radius: 5px;"></textarea>
        <h3>Please Enter Your Email:</h3>
        <!-- Textarea will need to have email input type when form added -->
        <textarea id="add-email" style="width:100%; border-radius: 5px;" name="text" placeholder="example@example.com" style="border-radius: 5px;"></textarea>
        <hr>
  
        <!-- Poll Options -->
        <h3>Please Add Your Poll Options:</h3>
        <div id="poll-options">
          <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" style="border:1px solid black;" placeholder="Enter Title Here" name="title"/>
          </div>
            
          <div class="form-group">
            <label for="description">Description (Optional):</label>
            <input type="text" class="form-control" style="border:1px solid black;" placeholder="Enter Optional Description Here" name="description"/>
          </div>
        </div>
        <div id="two-buttons">
          <button type="button" style="background-color: #89C1FF; border: #89C1FF;" class="btn btn-primary" value="Add" id="add">Add option</button>
          <button type="button" style="background-color: #89C1FF; border:#89C1FF;"class="btn btn-primary" id="submit">Submit</button>
        </div>
      </section>
    </main>
  </body>
